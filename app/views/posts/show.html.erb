<p id="notice"><%= notice %></p>
<% cache ['v1', @post] do %>
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <p>
    <%= render @post.author %>
  </p>

  <p>
    <%= render partial: 'categories', locals: {categories: @post.categories} %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
